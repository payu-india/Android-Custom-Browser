<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/payu_review_row"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/t_review_order_details_key"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:background="@android:color/white"
        android:textColor="@color/cb_dark_grey"
        android:fontFamily="sans-serif-regular"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textStyle="bold"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/t_review_order_details_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="0dp"
        android:paddingRight="10dp"
        android:textColor="@color/cb_blue_button"
        android:paddingLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:fontFamily="sans-serif-regular"
        android:textSize="16sp" />
    </LinearLayout>
    <View
        android:id="@+id/payu_review_order_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/payu_review_row"
        android:background="@color/cb_grey" />
</RelativeLayout>